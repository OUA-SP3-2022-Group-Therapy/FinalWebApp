@model GroupTherapyWebAppFinal.Models.UserModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="pageTitleTextWelcome">Sign up to</p>
<p class="pageLogoFancy">PetPal</p>
<div class="mainBox">
    <div class="col-md-4">
        <div class="welcomeScreenMain">
            <div class="welcomeScreenSection">
                <form asp-action="CreateUser">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" style="margin-bottom:8px;" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" style="margin-bottom:8px; type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" style="margin-bottom:8px;" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserType" class="control-label"></label>
                        <input asp-for="UserType" class="form-control" style="margin-bottom:8px;" />
                        <span asp-validation-for="UserType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" style="margin-bottom:8px;" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    
                    <input asp-for="DateCreated" type="hidden" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />

                    <div class="form-group">
                        <input type="submit" value="Sign Up" class="buttonCustomTitle" />
                    </div>
                </form>                
            </div>
            <!--Image/Slideshow area.-->
            <div class="welcomeScreenSection">
                <img src="images/cat_welcome.png" alt="Cat Head.">
            </div> 
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
