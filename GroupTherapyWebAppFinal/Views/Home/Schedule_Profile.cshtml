@model GroupTherapyWebAppFinal.Models.UserModel

@{
    ViewBag.Title = "All Family Groups";
    Layout = "_Layout";
    var schedules = ViewData["ScheduleDet"] as Schedule;
    var UserID = ViewBag.UserID;
    var FamilyID = ViewBag.FamID;
    var ScheduleID = ViewBag.ScheduleID;
}

<html>
    <head>
        <title>Petpal | All Family Groups</title>
    </head>

    <body>
    <div class="mainBox">
        <!-- Add in the Main Navigation Menu -->
        <div class="navigationBar">
        <!-- Options for Icon based LOGO or Image based LOGO *******************-->
            <p class="navigationLogoIcon"><span><a href="index.html" target="_self"><i class="fa fa-user-circle" aria-hidden="true"></i></a></span></p>
            <!--<p class="navigationLogo"><span><img class="navigationLogoImage" src="images/logo.png"></img></span></p>-->
            <p class="navigationTitleName">LOGO</p>
            <p class="navigationTitleAnchor"></p>

            <!--Search Entry-->
            <form action="/" method="GET" class="form">
                <input type="text" id="search" placeholder="Search..."></input>
            </form>

            <!-- Options for text based nav items or icons ***********************-->
            <!-- Text Based.
              <p class="navigationTitleItem"><a href="index.html">Home</a></p>
             <p class="navigationTitleItem"><a href="">Item</a></p>
            -->
            <p class="navigationItemIcon">
                <span>
                    <a asp-controller="Home" asp-action="Member_Profile" asp-route-UserID="@Model.UserModelID" asp-route-ViewID="@Model.UserModelID">
                        <i class="fa fa-user"
                           aria-hidden="true" title="User Profile"></i>
                    </a>
                </span>
            </p>
            <p class="navigationItemIcon">
                <span>
                    <a asp-controller="Home" asp-action="All_Fam_Groups" asp-route-UserID="@Model.UserModelID">
                        <i class="fa fa-users"
                           aria-hidden="true" title="Family Groups"></i>
                    </a>
                </span>
            </p>
            <p class="navigationItemIcon">
                <span>
                    <a asp-controller="Home" asp-action="All_Pets" asp-route-UserID="@Model.UserModelID">
                        <i class="fa fa-paw"
                           aria-hidden="true" title="Pets"></i>
                    </a>
                </span>
            </p>
            <p class="navigationItemIcon">
                <span>
                    <a asp-controller="Home" asp-action="All_Schedules" asp-route-UserID="@Model.UserModelID">
                        <i class="fa fa-calendar"
                           aria-hidden="true" title="Calendar"></i>
                    </a>
                </span>
            </p>
        </div>
        <!-- Add in the login button -->
        <div class="navigationBarEnd">
            <a href="" target="_blank">
                <p class="navigationEndItem">
                    <span>
                        <a href="" target="_blank">
                            <i class="fa fa-bars"
                               aria-hidden="true"></i>
                        </a>
                    </span>
                </p>
            </a>
        </div>

        <div class="lineDivider"> <!--menu divider--></div>

        <!--Page title-->
        <p class="pageTitleText">
            Schedule
        </p>
        <br>
        <!--Schedule header-->
        
        <!--Schedule details-->
        <div class="membersProfileSectionDetails">
            <div class="membersProfileSectionImage">
                <p class="textEvents" style="font-size:X-large">@schedules.ScheduleName&nbsp;&nbsp;</p>
                <div class="dashboardUserImage" id="profileAnimalOne"></div>
            </div>
            <p class="textEvents">@schedules.StartDateTime</p>
            <p class="textEvents">@schedules.EndDateTime</p>
            <p class="textEvents">@schedules.Frequency</p>
            <p class="textEvents">@schedules.Dose</p>
            <p class="textEvents">@schedules.Description</p>
        </div>
    </div>
    </body>
</html>