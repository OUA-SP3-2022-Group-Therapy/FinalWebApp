@model GroupTherapyWebAppFinal.Models.FamilyGroup

@{
    ViewData["Title"] = "Add Family Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int UserID = ViewBag.UserID;
}

<h1>Add a new Family Group</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFamilyGroup" asp-route-UserID="@UserID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FamilyName" class="control-label"></label>
                <input asp-for="FamilyName" class="form-control" />
                <span asp-validation-for="FamilyName" class="text-danger"></span>
            </div>
            <input asp-for="DateCreated" type="hidden" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <div class="form-group">
                <label asp-for="MemberStatus" class="control-label"></label>
                <input asp-for="MemberStatus" class="form-control" />
                <span asp-validation-for="MemberStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Group" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

